# Sample environment variables for PersonalCloud Server
# Copy this file to .env and fill in your values

# ===================
# Database
# ===================
DATABASE_URL="postgresql://username:password@localhost:5432/cloud_storage"

# ===================
# App
# ===================
NODE_ENV=development
PORT=3000
API_PREFIX=api
CORS_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# ===================
# JWT Authentication
# ===================
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===================
# Email (SMTP)
# ===================
# For Gmail: Use App Password (not your regular password)
# https://support.google.com/accounts/answer/185833
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM="PersonalCloud <noreply@personalcloud.com>"

# ===================
# Admin Seed
# ===================
# Default admin account created on startup
ADMIN_EMAIL=nvhan166@gmail.com
ADMIN_PASSWORD=han1662003
